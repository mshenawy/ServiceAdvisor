<div class="list-group">
  
  
  <% @services.each do |service| %>
  	<div class="list-group-item ">
    		<div class="table-responsive">
    			<div class="card" style="width: 20rem;" >
					<%= link_to image_tag(service.image.url(:original)),service_path(service.id)  %>	
					<div class="star-rating" data-score=<%=getServiceAvgReviews(service) %>>
				</div>
				<em><%= "#{getReviewsLength(service)} reviews "  %> </em>

				</div>
				<table class="table">
					<tbody>
						<tr>
							<th width="10%">Title:</th>
							<td><%= service.title %></td>
						</tr>
						<tr>
							<th>Description:</th>
  							<td><%= service.description %></td>
						</tr>

					</tbody>
				</table>
			</div>
				
				
	</div>
  <% end %>

</div>

<script >
$('.star-rating').raty({
  path: '/assets/',
  round : { down: .26, full: .6, up: .76 },
  readOnly:true,
  score: function() {
    return $(this).attr('data-score');
  }
});
</script>